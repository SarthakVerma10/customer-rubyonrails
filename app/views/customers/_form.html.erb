<%= form_with model: customer do |form| %>

<div>
  <%= form.label :Name %>
  <%= form.text_field :Name %>
  <% @customer.errors.full_messages_for(:Name).each do |message| %>
      <div><%= message %></div>
    <% end %>
</div>

<div>
  <%= form.label :Phone %>
  <%= form.text_field :Phone %>
  <% @customer.errors.full_messages_for(:Phone).each do |message| %>
      <div><%= message %></div>
    <% end %>
</div>

<div>
  <%= form.label :Email %>
  <%= form.text_field :Email %>
  <% @customer.errors.full_messages_for(:Email).each do |message| %>
      <div><%= message %></div>
    <% end %>
</div>

<div>
  <%= form.label :Address %>
  <%= form.text_field :Address %>
  <% @customer.errors.full_messages_for(:Address).each do |message| %>
      <div><%= message %></div>
    <% end %>
</div>

<div>
  <%= form.submit %>
</div>

<% end %>